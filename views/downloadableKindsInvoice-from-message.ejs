<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      /* A4 size in px at 96 DPI = 794 x 1123 */
      .a4-page {
        width: 794px;
        height: 1123px;
        margin: 0 auto;
        padding: 40px;
        box-sizing: border-box;
        background-color: #fff;
        position: relative;
        overflow: hidden;
      }

      body {
        font-family: Arial, sans-serif;
        background: #eee;
        padding: 0;
        margin: 0;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
      }

      .logo {
        width: 150px;
        height: 150px;
        margin-top: -25px;
      }

      .logo img {
        width: 100%;
        height: auto;
      }

      .receipt-number {
        border: 1px solid #000;
        padding: 6px 10px 14px;
        font-size: 12px;
      }

      .org-details {
        flex-grow: 1;
        padding: 0 20px;
      }

      .reg-number,
      .org-address,
      .footer,
      .donation-info {
        font-size: 12px;
      }

      .org-name {
        font-size: 18px;
        font-weight: bold;
        margin: 5px 0;
      }

      h6 {
        margin: 4px 0;
        border-bottom: 1px solid #000;
        font-size: 12px;
        padding-bottom: 6px;
      }

      .form-field {
        margin-top: 15px;
      }

      input[type="text"] {
        width: 100%;
        border: none;
        border-bottom: 1px solid #000;
        padding: 5px;
        font-weight: 300;
        text-transform: capitalize;
      }

      thead th {
        border: 1px solid #000;
        padding: 6px;
        font-size: 12px;
        text-align: left;
        background-color: #0000000f;
      }
      tfoot td {
        /* border: 1px solid #000; */
        padding: 6px;
        font-size: 12px;
        text-align: left;
        background-color: #0000000f;
      }
      tbody td {
        border: 1px solid #000;
        padding: 6px;
        font-size: 12px;
        text-align: left;
      }
      .signature-section {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        margin-bottom: 20px;
      }

      .signature-section span {
        font-size: 12px;
        font-weight: bold;
      }
      .amount-box {
        border: 1px solid #000;
        width: 150px;
        height: 40px;
        margin-top: 10px;
        text-align: center;
        font-size: 14px;
        padding-top: 10px;
      }

      .footer {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
      }

      label {
        color: #01018b;
        font-size: 12px;
      }

      button {
        margin-top: 1rem;
        cursor: pointer;
      }

      a {
        color: black;
        text-decoration: none;
      }
      .letter img {
        max-width: -webkit-fill-available;
      }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
  </head>
  <body>
    <div id="container">
      <div class="a4-page">
        <div class="letter">
          <img src="https://anubhutivisionss.com/images/letter.jpg" alt="" />
        </div>
      </div>
      <div class="a4-page">
        <div class="header">
          <div class="logo">
            <!-- <img src="http://localhost:3000/images/AnubhutiLogo.png" alt="" /> -->
            <!-- for server -->
            <img
              src="https://anubhutivisionss.com/images/AnubhutiLogo.png"
              alt=""
            />
          </div>
          <div class="org-details">
            <div class="reg-number">
              Registration No. & Date : 11730/09 - 06 May 2009
            </div>
            <div class="org-name">ANUBHUTI VISION SEVA SANSTHAN</div>
            <div class="org-address">
              68-2 Mayakhedi, Near Omaxe City-I, Bypass Road, Indore, (M.P.)
              India<br />
              Regd. Off. : 203-A, Slice No. 4, Scheme No. 78, Aranya Nagar,<br />
              Indore. Phone: 0731-4050114, Mobile : 98267-44114
            </div>
          </div>
          <div class="receipt-number">
            <div>RECEIPT</div>
            <div>No.: <%= donation.receiptNo %></div>
            <div>Date: <%= new Date(donation.date).toLocaleDateString() %></div>
          </div>
        </div>
        <form>
          <div class="form-field">
            <label>Received with thanks from M/s.</label>
            <h6><%= donation.donorName %></h6>
          </div>
          <!--  -->
          <div class="form-field">
            <label>Aadhar Card / PAN No.</label>
            <h6><%= donation.pan || donation.aadhar || 'N/A' %></h6>
            <span style="float: right">
              <label>Mobile</label>
              <h6 style="width: 200px"><%= donation.phoneNumber %></h6>
            </span>
          </div>

          <div class="form-field">
            <label>Address</label>
            <h6><%= donation.address || 'N/A' %></h6>
          </div>

          <div class="form-field">
            <label>Items</label>
            <table
              style="width: 60%; border-collapse: collapse; margin-top: 10px"
            >
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Approx. Price</th>
                </tr>
              </thead>
              <tbody>
                <% let totalAmount = 0; donation.items.forEach(item => {
                totalAmount += parseFloat(item.approxAmount || 0); %>
                <tr>
                  <td><%= item.name %></td>
                  <td><%= item.quantity %></td>
                  <td>₹<%= item.approxAmount || 'N/A' %></td>
                </tr>
                <% }); %>
              </tbody>
              <tfoot>
                <tr>
                  <td>Total</td>
                  <td></td>
                  <td>₹<%= totalAmount.toFixed(2) %></td>
                </tr>
              </tfoot>
            </table>
          </div>

          <div>
            <div class="form-field">
              <label>Description</label>
              <h6 style="width: 60%"><%=donation.purpose %></h6>
            </div>
          </div>

          <div class="signature-section">
            <div>
              <div style="text-align: left">
                <div>
                  <label>Accountant / Authorised Person :</label>
                  <span> <%= formattedName %> </span>
                </div>
                <div>
                  <label>For : </label>
                  <span>Anubhuti Vision Seva Sansthan</span>
                </div>
              </div>
            </div>
          </div>

          <div class="donation-info">
            Donation Exempted U/S 80G of IT ACT<br />
            CIT-I/Ind/Tech/80-G/20/2011-12<br />
            PAN No.: AABAA7262L
          </div>

          <div class="footer">
            <a href="https://www.anubhutivisions.org"
              >Visit us: www.anubhutivisions.org</a
            >
            <a href="mailto:anubhutivisionsss@gmail.com"
              >Contact us: anubhutivisionsss@gmail.com</a
            >
          </div>
        </form>
        <button
          type="button"
          onclick="handleConvertToPDF( `<%= donation.id%>`)"
        >
          Download as PDF
        </button>
      </div>
    </div>

    <script>
      const handleConvertToPDF = (id) => {
        console.log(id);
        fetch(
          `https://anubhutivisionss.com/api/v1/viewInvoice/downloadKindsInvoice-message?id=${id}`,
          {
            method: "GET",
          }
        )
          .then((response) => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.text(); // Get the HTML as text
          })
          .then((receiptHTML) => {
            // Create a temporary iframe to render the HTML
            const iframe = document.createElement("iframe");
            iframe.style.position = "absolute";
            iframe.style.top = "-9999px"; // Hide the iframe off-screen
            document.body.appendChild(iframe);

            // Write the HTML content to the iframe
            iframe.contentWindow.document.open();
            iframe.contentWindow.document.write(receiptHTML);
            iframe.contentWindow.document.close();

            // Wait for iframe content to load completely
            iframe.onload = async () => {
              // Get the container element from within the iframe
              const pages =
                iframe.contentWindow.document.querySelectorAll(".a4-page");

              if (!pages.length) {
                console.error("No .a4-page elements found");
                document.body.removeChild(iframe);
                return;
              }
              const pdf = new jspdf.jsPDF("p", "mm", "a4");

              for (let i = 0; i < pages.length; i++) {
                const canvas = await html2canvas(pages[i], {
                  useCORS: true,
                  allowTaint: true,
                  scale: 1.5,
                });

                const imgData = canvas.toDataURL("image/png");
                const pdfWidth = 210;
                const pdfHeight = 297;

                if (i !== 0) pdf.addPage();
                pdf.addImage(imgData, "PNG", 0, 0, pdfWidth, pdfHeight);
              }

              pdf.save("donation-receipt.pdf");
              document.body.removeChild(iframe); // Clean up
            };
          })
          .catch((error) => {
            console.error("Error fetching receipt HTML:", error);
          });
      };
      function capitalizeFirstLetter(text) {
        if (!text) {
          return text; // Return empty or null input as is
        }
        return text.charAt(0).toUpperCase() + text.slice(1);
      }
    </script>
  </body>
</html>
